{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
	"paths": {
      "@/*": [
          // Used in builds. The root is at `/src`.
          "./*",
          // Used in the IDE for type hints. The root is at `/`.
          "./src/*"
      ],
      "~/*": [
        "../../*", // Used in builds. The root should be inside bazel-out/examples/react
        "../../bazel-out/k8-fastbuild/bin/*" // Use for IDE type resolution.
      ]
	}
  },
  "include": ["src"]
}
